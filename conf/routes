# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# Serve index page
GET         /                                           controllers.Assets.at(path="/public", file="index.html")
GET         /register                                   controllers.Assets.at(path="/public", file="index.html")

# Serve js, it most probably going to be only one file (bundle.js)
GET         /js/*file                                   controllers.Assets.at(path="/public/javascripts", file)

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                               controllers.Assets.versioned(path="/public", file: Asset)


GET         /api/pictures                               controllers.PictureController.getPics

# Questionnaire service

# Ads a questionnaire with pics
POST        /comparison                                 services.comparison.ComparisonController.addQuestionnaire

# Gets a questionnaire with pics
GET         /comparison/:questionnaireId                services.comparison.ComparisonController.getQuestionnaire(questionnaireId: Int)

# Ads an answer including all evaluated things
POST        /comparison-answer/                         services.comparison.ComparisonAnswerController.addComparisonAnswer

# Get user by login
GET         /user/:login                                services.user.UserController.getUser(login: String)

# Ads new user
POST        /user                                       services.user.UserController.addUser

# Login request
POST        /login                                      services.user.UserController.login

